{% extends 'base.html.twig' %}

{% block body_id 'editform' %}

{% block main %}
    <h1>Редактирование книги</h1>

    {{ form_start(delete_form,{name:'delete_form'})  }}
    {{ form_end(delete_form) }}

    {% form_theme edit_form with ['bootstrap_3_layout.html.twig','@App/Form/fields.html.twig'] %}
    {{ form_start(edit_form,{name:'edit_form'}) }}

    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.author) }}
    {{ form_row(edit_form.uploadCover) }}
    {{ form_row(edit_form.uploadBookFile) }}
    {{ form_row(edit_form.allowedDownload) }}
    {{ form_row(edit_form.dateRead) }}

    <div class="clearfix">
        <input type="submit" value="{{ 'label.save'|trans }}" class="btn btn-success"/>
        <button class="btn btn-danger" onclick="$('form[name^=delete_form]').submit();return false;">{% trans %}label.delete{% endtrans %}</button>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}